<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.joined.JoinedFragment">

    <ImageView
        android:id="@+id/iv_joined_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:contentDescription="@string/common_appIconContentDesc"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@id/tv_joined_exam_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_joined_exam_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_between"
        android:gravity="center"
        android:paddingHorizontal="@dimen/margin_medium"
        android:textAppearance="@style/TextAppearance.MeshExam.Headline2"
        app:layout_constraintBottom_toTopOf="@id/tv_joined_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_joined_image"
        tools:text="Human computer interactions" />

    <TextView
        android:id="@+id/tv_joined_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:paddingHorizontal="@dimen/margin_medium"
        android:text="@string/exam_join_connectedTitle"
        android:textAppearance="@style/TextAppearance.MeshExam.Large.Regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/tv_joined_exam_name" />


</androidx.constraintlayout.widget.ConstraintLayout>