<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeshExam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/purple_500</item>

        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/gray_1</item>
        <item name="colorOnBackgroundLight">@color/gray_2</item>

        <item name="colorSurface">@color/gray_6</item>
        <item name="colorSurfaceBorder">@color/gray_5</item>
        <item name="colorOnSurface">@color/gray_1</item>

        <item name="colorError">@color/red_800</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Widgets -->
        <item name="materialButtonStyle">@style/Widget.MeshExam.Button</item>
        <item name="textInputStyle">@style/Widget.MeshExam.TextInputLayout</item>
        <item name="android:textViewStyle">@style/Widget.MeshExam.TextView</item>
    </style>

    <style name="Widget.MeshExam.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.MeshExam.Normal.Medium</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.MeshExam.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.MeshExam.Normal.Medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="strokeColor">?attr/colorSurfaceBorder</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.MeshExam.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/radius_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_small</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="materialThemeOverlay">@style/Theme.MeshExam.MaterialThemeOverlay</item>
    </style>
    
    <style name="Theme.MeshExam.MaterialThemeOverlay">
        <item name="editTextStyle">@style/Widget.MeshExam.EditText</item>
    </style>

    <style name="Widget.MeshExam.EditText" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.MeshExam.Normal.Regular</item>
    </style>

    <style name="Widget.MeshExam.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MeshExam.Normal.Regular</item>
    </style>

</resources>